{
  "kind": "collectionType",
  "collectionName": "disability_cards",
  "info": {
    "singularName": "disability-card",
    "pluralName": "disability-cards",
    "displayName": "Disability Card",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "number": {
      "type": "string"
    },
    "proof": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "reviewStatus": {
      "type": "enumeration",
      "enum": [
        "unreviewed",
        "approved",
        "rejected"
      ],
      "default": "unreviewed",
      "required": true
    },
    "expiry": {
      "type": "date",
      "required": true
    },
    "issuingDate": {
      "required": true,
      "type": "date"
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "mappedBy": "disability_card"
    }
  }
}
